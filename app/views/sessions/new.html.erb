<h1>ログインページ</h1>
<% if flash.now[:notice] %>
  <div class="notice"><%= flash.now[:notice] %></div>
<% end %>

<div class="container">
  <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="form-group">
    <div class="col-md-5">
      <%= f.label :email, 'メールアドレス', for: 'inputEmail4' %>
      <%= f.email_field :email, class: 'form-control', id: 'inputEmail4' %>
    </div>
    <div class="form-group">
    <div class="col-md-5">
      <%= f.label :password, 'パスワード', for: 'inputPassword4' %>
      <%= f.password_field :password, class: 'form-control', id: 'inputPassword4' %>
    </div>

    <div class = "actions">
    <%= f.submit 'ログイン', class: 'btn btn-info' %>
    </div>
  <% end %>
</div>


