<h1>ユーザ詳細ページ</h1>
<p>名前: <%= @tasks.name %></p>
<p>メールアドレス: <%= @tasks.email %></p>
<p>管理者権限: <%= @tasks.admin ? 'あり' : 'なし' %></p>

<%= form_with(url: tasks_path, method: "get", local: true) do |form| %>
  
<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= link_to "終了期限",{ sort_deadline_on: true } %></th>
      <th><%= link_to "優先度", { sort_priority: true} %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <h2>タスク一覧</h2>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>作成日時</th>
      <!-- 他の必要な属性を追加 -->
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <!-- 必要な属性を追加 -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '一覧に戻る', admin_users_path, class: 'btn btn-secondary' %>