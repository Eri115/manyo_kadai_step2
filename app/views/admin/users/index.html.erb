<h1><%= t('ユーザ一覧ページ') %></h1>


<div class="table-responsive-sm">
  <table class="table">
    <thead>
      <tr>
        <th><%= User.human_attribute_name("名前") %></th>
        <th><%= User.human_attribute_name("メールアドレス") %></th>
        <th><%= User.human_attribute_name("管理者権限") %></th>
        <th><%= User.human_attribute_name("タスク数") %></th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr class="user-title">
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin ? 'あり' : 'なし' %></td>
          <td><%= user.tasks.count %></td>
          <td><%= link_to t('common.show'), admin_user_path(user), class: "btn btn-info text-white show-user" %></td>
          <td><%= link_to t('common.edit'), edit_admin_user_path(user), class: "btn btn-info text-white edit-user" %></td>
          <td><%= link_to t('common.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "btn btn-outline-danger destroy-user text-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

