<h1>ラベル編集ページ</h1>

<% if @label.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@label.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <!-- ラベル編集フォームフィールド -->
<%= form_with(model: @label, local: true) do |form| %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
  <div class="form-group">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>


  <!-- 他のフォームフィールド -->
  <br>
  <div class="actions-label">
  <%= form.submit '更新する', id: 'create-user', class: 'btn btn-info' %>
  </div>
  <div class="actions">
  <%= link_to "戻る", labels_path, id: "back" %>
  </div>
<% end %>
