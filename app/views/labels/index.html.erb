<h1><%= t('ラベル一覧ページ') %></h1>

<table>
  <thead>
    <tr>
      <th><%= Label.human_attribute_name("名前") %></th>
      <th><%= Label.human_attribute_name("タスク数") %></th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
  <% @labels.each do |label| %>
      <tr class="user-title">
        <td><%= label.name %></td>
        <td><%= label.tasks.count %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class: "edit-label" %></td>
        <td><%= link_to t('common.destroy'),label_path(label), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: "destroy-label"%>
      </tr>
    <% end %>
  </tbody>
</table>
