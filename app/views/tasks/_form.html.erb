<!--　エラーメッセージ表記 -->
<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%#= pluralize(task.errors.count, "error") %> </h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- タスク編集投稿フォーム欄 -->
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class= "field">
    <%= form.label :deadline_on %>
    <%= form.date_field :deadline_on%>
  </div>
  <div class= "field">
    <%= form.label :priority%>
    <%= form.select :priority, options_for_select(Task.priorities.keys.map {|k| [I18n.t("enums.task.priority.#{k}"), k]}), include_blank: true %>
  </div>
  <div class= "field">
    <%= form.label :status%>
    <%= form.select :status, options_for_select(Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]}), include_blank: true %>
  </div>
  
 
  <!-- ラベルチェックボックス欄 -->
  <%= form.label :label_ids, 'ラベル'%>
  <% current_user.labels.each do |label| %>
    <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
    <%= label.name %>
  <% end %>

   <!-- 他のフォームフィールド -->
  <div class="actions">
    <%= form.submit id: button_id %>
  </div>
   <%= link_to "戻る", tasks_path, id: "back" %>
<% end %>